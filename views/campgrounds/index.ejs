<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<ul>
  <% for(let camp of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (camp.images.length) { %>
        <img src="<%= camp.images[0].url %>" class="img-fluid" />
        <% } else { %>
        <img src="/images/image-not-found.jpg" class="img-fluid" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>"
            >View <%= camp.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
  const camps = {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/js/clusterMap.js"></script>
